@if (Session["Login"].ToString() == "Administrador")
{

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    <section class="welcome p-t-10">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title-4">
                        Bienvenido
                        <div class="content">
                            @if (Session["usuarioNombre"] != null)
                            {<text>
                                    @Session["usuarioNombreCol"].ToString()
                            </text>
                        }
                        </div>
                    </h1>
                    <hr class="line-seprate">
                </div>
            </div>
        </div>
    </section>
    <!-- END WELCOME-->
    <!-- STATISTIC-->
    <section class="statistic statistic2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item statistic__item--green">
                        <h2 class="number">$10,368</h2>
                        <span class="desc">Gasto Semanal de Transporte</span>
                        <div class="icon">
                            <i class="zmdi zmdi-truck"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item statistic__item--orange">
                        <h2 class="number">$388,688</h2>
                        <span class="desc">Elementos Vendidos</span>
                        <div class="icon">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item statistic__item--blue">
                        <h2 class="number">$1,086</h2>
                        <span class="desc">Ventas de Esta Semana</span>
                        <div class="icon">
                            <i class="zmdi zmdi-calendar-note"></i>
