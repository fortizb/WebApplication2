@model IEnumerable<WebApplication2.Models.guias>

@{
    ViewBag.Title = "Index";
    <style type="text/css">
        #tablaDireccion td:hover {
            background-color: #e0e0e0;
            cursor: pointer;
        }

         #tablaDireccion td:active {
            background-color: #bdbdbd;
        }

        #listaOrigen {
            display: none;
        }
    </style>

    <div class="container">
        <h2>Agregar Guias A Hoja de Ruta</h2>
        <br />

        <p>
            @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
        </p>
        <a href="@Url.Action("Create", "guias")" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            <span>&nbsp;Crear guía</span>
        </a>
        <br />
        <table id="tablaDireccion" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.rut)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.observacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.hojaRuta.idHojaRuta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.hojaRuta.patente)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.rut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @(item.direccion + ", " + item.ciudad + ", Chile")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.observacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idHojaRuta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.hojaRuta.patente)
                        </td>
                        <td>
                            @Html.ActionLink("Agregar a Hoja De Ruta", "AddGuiaHR", new { idNumeroGuias = item.numeroGuia }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <p class="msj-hecho text-center text-danger" style="margin-top: 0.5em;"><b id="mensajeAgregado"></b></p>
        <br />
        <a class="btn btn-success" data-toggle="collapse" href="#collapseRuta" role="button" aria-expanded="false" aria-controls="collapseExample">Mostrar mapa</a> |
        <input id="btnLimpiarRuta" type="button" value="Limpiar ruta" class="btn btn-warning" /> |
        @Html.ActionLink("Finalizar", "Siguiente", new { }, new { @class = "btn btn-warning" })
        <br />
        <!-- Área para cargar collapse de ruta -->
        <div class="collapse" id="collapseRuta" style="margin-top: 1em;">
            <div class="card card-body">
                <ul class="nav nav-tabs">
                    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#map">Mapa de direcciones</a></li>
