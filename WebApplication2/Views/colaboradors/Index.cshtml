@model IEnumerable<WebApplication2.Models.colaborador>

@{
    ViewBag.Title = "Index";
}
<br />
<p>
    <a class="btn btn-success" href="@Url.Action("Create", "colaboradors")" style="margin-top: 1em;"><i class="fa fa-plus"></i>&nbsp;Añadir Vehiculo</a>
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.rut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidoPaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidoMaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valorHoraExtra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoMaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valorHoraExtra)
        </td>

        <td>
            <a class="btn btn-warning" href="@Url.Action("Edit", "colaboradors", new { id = item.run })" style="margin-top: 1em;"><i class="fa fa-edit"></i>&nbsp;Editar</a>
            <a class="btn btn-danger" href="@Url.Action("Delete", "colaboradors", new { id = item.run })" style="margin-top: 1em;"><i class="fa fa-trash"></i>&nbsp;Eliminar</a>
          
        </td>
    </tr>
}

</table>
